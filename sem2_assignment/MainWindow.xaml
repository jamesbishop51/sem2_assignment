<Window x:Class="sem2_assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sem2_assignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect Direction="275" BlurRadius="20" Opacity="0.5"/>
        </Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="484*"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="LbxGames" HorizontalAlignment="Left" Height="290" Margin="10,121,0,0" VerticalAlignment="Top" Width="140" SelectionChanged="ListBox_SelectionChanged"/>
        <ComboBox x:Name="CbxGenre" HorizontalAlignment="Left" Height="18" Margin="10,98,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="355,10,0,0" TextWrapping="Wrap" Text="Game reviews" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="TxtDescription" HorizontalAlignment="Left" Height="85" Margin="155,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" TextChanged="TextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="150,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="&lt; all games"/><LineBreak/><Run Text="(this will be removed)"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,78,0,0" TextWrapping="Wrap" Text="Game Genre" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="txtReviewer" HorizontalAlignment="Left" Height="39" Margin="44,282,0,0" TextWrapping="Wrap" Text="." VerticalAlignment="Top" Width="205" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="155,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="&lt; eg fps, rpg sports ect"/><LineBreak/><Run/></TextBlock>
        <Image x:Name="ImgCover" Grid.Column="1" HorizontalAlignment="Left" Height="234" Margin="68,43,0,0" VerticalAlignment="Top" Width="181"/>
        <TextBox x:Name="txtReview" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="85" Margin="433,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="155,299,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="123"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="155,272,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="123"/>

    </Grid>
</Window>
